<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity">

    <!-- User's Cards -->
    <TextView
        android:id="@+id/cardOne"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"
        android:paddingBottom="100dp"
        />

    <TextView
        android:id="@+id/cardTwo"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/cardOne"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"
        android:paddingBottom="100dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/cardThree"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/cardTwo"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"
        android:paddingBottom="100dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/cardFour"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/cardThree"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"
        android:paddingBottom="100dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/cardFive"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/cardFour"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"
        android:paddingBottom="100dp"
        android:layout_marginLeft="10dp"
        />



    <!-- Dealer's Cards -->
    <TextView
        android:id="@+id/dealerOne"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"
        android:paddingBottom="100dp"
        />

    <TextView
        android:id="@+id/dealerTwo"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/dealerOne"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"
        android:paddingBottom="100dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/dealerThree"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/dealerTwo"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"
        android:paddingBottom="100dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/dealerFour"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/dealerThree"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"
        android:paddingBottom="100dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/dealerFive"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/dealerFour"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"
        android:paddingBottom="100dp"
        android:layout_marginLeft="10dp"
        />


    <!-- Point Texts -->
    <TextView
        android:id="@+id/userPoints"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="440dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"

        />

    <TextView
        android:id="@+id/dealerPoints"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"
        />


    <!-- Gamer Notifications -->
    <TextView
        android:id="@+id/display"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/casino"
        />


    <!-- Buttons -->

    <Button
        android:id="@+id/stopButton_id"

        style="@style/ButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="150dp"
        app:layout_constraintRight_toRightOf="@id/hitButton_id"
        android:textSize="50dp"
        android:text="@string/stopText"
        android:layout_marginBottom="10dp"
        android:onClick="stop"
        />

    <Button
        android:id="@+id/hitButton_id"

        style="@style/ButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/stopButton_id"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="100dp"
        android:textSize="50dp"
        android:text="@string/hitText"
        android:paddingHorizontal="32dp"
        android:layout_marginBottom="10dp"
        android:onClick="hit"
        />


    <Button
        android:id="@+id/newGameButton_id"

        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf= "parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="355dp"
        android:textSize="15dp"
        android:text="@string/newText"
        android:layout_marginBottom="10dp"
        android:onClick="restartApp"
        />

</android.support.constraint.ConstraintLayout>